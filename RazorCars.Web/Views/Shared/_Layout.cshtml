<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Razor Car</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.css">
</head>
@using Microsoft.AspNet.Identity
<body>
    <div class="row">
        <ul id="dropdown1" class="dropdown-content">
            <li>@Html.ActionLink("Account Info", "Index", "Manage")</li>
            <li class="divider"></li>
        </ul>
        <ul id="dropdown2" class="dropdown-content">
            <li>@Html.ActionLink("Inventories", "Index", "Inventories")</li>
            <li class="divider"></li>
        </ul>
        <nav @(Request.IsAuthenticated ? "@class='red lighten-1'" : "@class='red darken-1'") role="navigation">
            <div class="nav-wrapper container">
                @Html.ActionLink((Request.IsAuthenticated ? "Razor Administration Portal" : "Razor Cars"), "Home", "Index", htmlAttributes: new { @class = "brand-logo", id = "logo-container" })
                <ul class="right hide-on-med-and-down">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <li>@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>
                            <li><a class="dropdown-button" href="#!" data-activates="dropdown2">Administration<i class="material-icons right">arrow_drop_down</i></a></li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Registration", "Register", "Account")</li>
                    }
                </ul>
            </div>
        </nav>
    </div>

    @Html.Partial("_SideNavPartial")

    <!-- Teal page content  --> <!-- Accordance with materializecss.com/grid.html-->
    <div class="col s12 m8 l9">
        <div class="container body-content">
            @RenderBody()
            <hr />
            @if (!Request.IsAuthenticated)
            {
                <footer>
                    <p>&copy; @DateTime.Now.Year - Razor Cars</p>
                </footer>
            }
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        // Initialize collapse button
        $(".button-collapse").sideNav();
        // Initialize collapsible
        $('.collapsible').collapsible();

        $(".dropdown-button").dropdown();
    </script>
</body>

</html>
